{
    "name": "dereuromark/cakephp-test-helper",
    "description": "TestHelper plugin for CakePHP",
    "type": "cakephp-plugin",
	"keywords": ["cakephp", "plugin", "setup", "tests", "coverage", "generate", "development"],
	"homepage": "https://github.com/dereuromark/cakephp-test-helper",
    "license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"role": "Author",
			"homepage": "http://www.dereuromark.de"
		}
	],
    "require": {
        "php": ">=5.6.0",
        "cakephp/cakephp": "^3.6",
		"dereuromark/cakephp-tools": "^1.2"
    },
    "require-dev": {
        "fig-r/psr2r-sniffer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "TestHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestHelper\\Test\\": "tests/",
			"App\\": "tests/test_app/src/",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "test": "php phpunit.phar",
        "test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-6.5.8.phar && mv phpunit-6.5.8.phar phpunit.phar || true",
		"test-coverage" : "php phpunit.phar --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
        "cs-check": "phpcs -p -v --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src tests config",
        "cs-fix": "phpcbf -v --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml src tests config"
    }
}
